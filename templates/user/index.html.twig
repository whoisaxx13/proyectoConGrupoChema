{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
        <h1>User index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>Roles</th>
                    <th>FullName</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>PhoneNumber</th>
                    <th>Dni</th>
                    <th>Naf</th>
                    <th>RegDate</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.fullName }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.address }}</td>
                    <td>{{ user.phoneNumber }}</td>
                    <td>{{ user.dni }}</td>
                    <td>{{ user.naf }}</td>
                    <td>{{ user.regDate ? user.regDate|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                        <a href="{{ path('app_user_report', {'id': user.id}) }}">see report</a>
                        {% if not user.roles %}
                            <a href="{{ path('app_user_verify', {'id': user.id}) }}">verify</a>
                        {% endif %}
                        
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="11">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

{% endblock %}

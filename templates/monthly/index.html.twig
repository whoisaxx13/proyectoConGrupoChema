{% extends 'base.html.twig' %}

{% block title %}Hello MonthlyController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{fecha}}</h1>
    <h1>Horas mensuales: {{app.user.monthlytime}} h</h1>
    <h1>Horas que faltan: {{app.user.remainingHours}} h</h1>
    {% if tareasAtrasadas %}
        {% if tareasAtrasadas <= 0 %}
            <h1>No tienes tareas arrastradas.</h1>
        {% else %}
            <h2>Te faltan horas del mes pasado </h2>
        {% endif %}
    {% else %}
        <h1>No realizaste tareas el mes pasado.</h1>
    {% endif %}
</div>
{% endblock %}

            {% if task.type == 1 %}
    <h2 class="text-center my-5 mx-5">Trabajos</h2>
    <div class="container">
      <div class="row">
        {% for job in task.jobs %}
        <div class="col-md-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">{{ job.description }}</h5>
              <p class="card-text">{{ job.time }} minutos</p>
            </div>
            <div class="btn-group">
              <form method="post" action="{{ path('app_job_delete', {'id': job.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ job.id) }}">
                  <button class="mb-2 btn btn-danger">Eliminar</button>
              </form>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
    {% endif %}


{% extends 'base.html.twig' %}

{% block title %}New Job
{% endblock %}

{% block body %}
	<div class="m-0 p-0">
		<a class="" href="{{ path('app_task_show', {'id': job.taskid.id}) }}">ðŸ“… Volver</a>
		{# Esto vuelve a la vista de la tarea su tenemos que pasar a esta vista la task de este trabajo #}
	</div>

	<h1 class="mb-auto text-center font-italic Italica mt-5">Trabajo</h1>
	<div class="container mt-5">
		<div class="row d-flex justify-content-center">
			<div class="col-md-6">
				<div class="card shadow p-3 mb-5 bg-white rounded">
					<div class="card-body">
						{{ form_start(form) }}
							<div class="form-group">
								{{ form_row(form.description, { 'attr': {'class': 'form-control'} }) }}
							</div>
							<div class="form-group">
								{{ form_row(form.time, { 'attr': {'class': 'form-control'} }) }}
							</div>
							<div class="text-center">
								<button class="m-3 btn btn-primary btn-lg active font-italic Italica">{{ button_label|default('Establecer Trabajo') }}</button>
							</div>
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
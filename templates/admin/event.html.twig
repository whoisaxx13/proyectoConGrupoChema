{% extends 'base.html.twig' %}

{% block title %}Admin View{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .accept{
        color:green;
    }
    .deny{
        color:red;
    }
</style>

    <table class="table">
        <thead>
            <tr>
                <th class="text-center">Username</th>
                <th class="text-center">State Request</th>
                <th class="text-center">Actions</th>
                <th class="text-center">Chore</th>
            </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td class="text-center">{{ task.user }}</td>
                <td class="text-center">
                {% if task.staterequest == NULL %}
                    <p>❔</p>
                    {% elseif task.staterequest == 1 %}
                        <p class="accept">✅</p>
                    {% elseif task.staterequest == 0 %}
                        <p class="deny">⛔</p>
                {% endif %}
                </td>
                <td class="text-center">
                {% if task.staterequest == 1 %}
                <form method="POST">
                    <input type="submit" value="Accept"/>
                    <input type="submit" value="Deny"/>
                </form>
                {% endif %}
                </td>
                <td class="text-center">
                {% if task.staterequest == 1 %}
                    <label>Coordinador</label>
                    <input type="checkbox" value="coordinator"/>
                    <label>Conductor</label>
                    <input type="checkbox" value="driver"/> 
                {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

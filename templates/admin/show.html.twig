{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>{{user.username}} - User Report</h1>
    <form action="{{path("app_admin_show", {dni: app.user.id})}}" method="get">
    Filter by month:
        <select name="month" id="month">
            {% for j in range(1, 12) %}
                <option value={{j}} >{{ date('2012-' ~ j ~ '-01') |date('m') }}</option>
            {% endfor %}
        </select>
        <button type="submit">Filter</button>
        <a href="{{path("app_admin_show", {dni: app.user.id})}}">reset</a>
    </form>
    <main>
        <div>Empresa: 75620276W</div>
        <div>Trabajador: 43588588T</div>
        <div>Periodo: 
        {% if app.request.get('month') %}
            0{{app.request.get('month')}}-2023

            {% else %}
            2023
        {% endif %}
        </div>
        
        <table class="table">
            <thead>
                <th>Event </th>
                <th>Start </th>
                <th>End </th>
            </thead>
            <tbody>
            {% for task in tasks %}
                <tr>
                    <td>{{task.event.name}}</td>
                    <td>{{task.starttime | date ("d-m-Y H:i")}}</td>
                    <td>{{task.endtime | date ("d-m-Y H:i")}}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </main>
    

{% endblock %}
